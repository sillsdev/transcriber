  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Start & Debug",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "Background NPM",
      "postDebugTask": "end serve",
      "runtimeArgs": ["--disable-web-security"]
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Debug after start",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "runtimeArgs": ["--disable-web-security"]
    }
  ]
}
